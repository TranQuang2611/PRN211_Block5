@using WebApplication.Models
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@model List<Customer>

<h1 style="display:flex;justify-content:center">List Customer</h1>

<div style="display:flex;justify-content:center">
    <table border="1">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Age</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td><a asp-action="Detail" asp-controller="Home" asp-route-id="@c.Code">@c.Code</a></td>
                    <td> @c.Name</td>
                    <span asp-validation-for="@c.Name"></span>
                    <td> @c.Age</td>
                    <span asp-validation-for="@c.Age"></span>
                    <td>
                        <a asp-action="Update" asp-controller="Home" asp-route-id="@c.Code">Update </a>
                        |
                        <a asp-action="Delete" asp-controller="Home" asp-route-id="@c.Code" onclick="return confirm('Are you sure you want to delete this customer?')"> Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

<div style="display:flex;justify-content:center;padding-top:20px">
    <a href="/Home/Show">Continue</a>
</div>





